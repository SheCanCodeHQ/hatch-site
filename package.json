  "dependencies": {},
  "devDependencies": {
    "husky": "^0.14.3",
    "lint-staged": "^4.0.3",
    "prettier": "^1.5.3"
  },
  "lint-staged": {
    "*.{js,jsx}": ["prettier --write --trailing-comma all", "git add"]
  }
}
